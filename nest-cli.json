{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "monorepo": true,
  "projects": {
    "scheduler": {
      "type": "application",
      "root": "apps/scheduler",
      "entryFile": "main",
      "sourceRoot": "apps/scheduler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/scheduler/tsconfig.app.json"
      }
    },
    "weather": {
      "type": "application",
      "root": "apps/weather",
      "entryFile": "main",
      "sourceRoot": "apps/weather/src",
      "compilerOptions": {
        "tsConfigPath": "apps/weather/tsconfig.app.json"
      }
    }
  }
}